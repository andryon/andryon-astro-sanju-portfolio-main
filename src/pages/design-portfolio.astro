---
import { Header } from '@components/misc';
import { BaseHead } from '@components/seo';
import { SITE_TITLE } from '@data/index';
import RootLayout from '@layouts/root-layout.astro';

// Sample portfolio data - you can move this to a separate data file later
const portfolioItems = [
  {
    id: 1,
    title: "Bitnova Crypto Wallet",
    category: "Mobile UI",
    image: "/assets/design/2022-bitnova.png",
    description: "A mobile wallet application for the Bitnova blockchain platform, designed to provide users with a secure and user-friendly way to manage their digital assets.",
    tools: ["Figma"],
    link: "https://dribbble.com/shots/22984390-Bitnova-Crypto-Wallet"
  },
  {
    id: 2,
    title: "OSS Planters",
    category: "Mobile UI",
    image: "/assets/design/2022-oss-planters.png",
    description: "One Stop Solution for Planters is an application used to monitor plantations.",
    tools: ["Figma"],
    link: "https://dribbble.com/shots/18683136-Redesign-OSS-Planters-PTPN-XII"
  },
  // Add more projects as needed
];
---

<!doctype html>
<html lang='en'>
  <head>
    <BaseHead
      title={`Design Portfolio | ${SITE_TITLE}`}
      description="Explore my UI/UX design portfolio showcasing various projects and case studies"
    />
  </head>

  <RootLayout>
    <div class="flex flex-col w-full gap-6 max-w-7xl mx-auto px-4 py-8">
      <Header />
      
      <div class="flex flex-col gap-6">
        <div class="flex flex-col gap-2">
          <h1 class="text-4xl font-medium">Design Portfolio</h1>
          <p class="text-gray-700 dark:text-gray-400 text-lg">
            A collection of my UI/UX design projects and case studies
          </p>
        </div>

        <!-- Portfolio Gallery -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          {portfolioItems.map((item) => (
            <a 
              href={item.link}
              target="_blank"
              rel="noopener noreferrer"
              class="group block"
            >
              <div class="relative overflow-hidden rounded-xl aspect-[4/3]">
                <img
                  src={item.image}
                  alt={item.title}
                  class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/50 to-transparent md:opacity-0 md:group-hover:opacity-100 transition-all duration-300">
                  <div class="absolute bottom-0 left-0 right-0 p-3 text-white">
                    <div class="flex items-center gap-1">
                      <span class="text-[11px] uppercase tracking-wider text-gray-300 font-medium">{item.category}</span>
                      <span class="w-1 h-1 rounded-full bg-gray-400"></span>
                      <span class="text-[11px] text-gray-300">{item.tools.join(", ")}</span>
                    </div>
                    <h3 class="text-lg font-medium mt-0.5">{item.title}</h3>
                    <p class="text-xs text-gray-200 mt-0.5 line-clamp-1 opacity-90">{item.description}</p>
                  </div>
                </div>
              </div>
            </a>
          ))}
        </div>
      </div>
    </div>
  </RootLayout>
</html>

<style>
  .line-clamp-1 {
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style> 